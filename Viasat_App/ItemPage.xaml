<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="Viasat_App.ItemPage"
             xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core" 
    ios:Page.UseSafeArea="true">
    
    <ContentPage.Content>
            <StackLayout>
            
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="8*"/>
                    <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                
                <Label 
                    x:Name="itemTitleLabel"
                    HorizontalOptions="Center"
                    Text="Item Title"
                    Grid.Row="0"
                    FontSize="Large"
                    TextColor="#009FE3"
                    />
                
                <TableView HasUnevenRows="true" Grid.Row="1" Margin="2">
                    <TableRoot>
                        
                        <TableSection>
                            <ViewCell>
                                <Label Margin="2">
                                    <Label.FormattedText>
                                        <FormattedString>
                                            <Span
                                                Text="Serial:"
                                                FontAttributes="Bold"
                                                TextColor="#009FE3"
                                                />
                                            
                                            <Span
                                                Text="  "
                                                />
                                            
                                            <Span
                                                Text="0123456789876543234567898765432"
                                                />
                                            </FormattedString>
                                        </Label.FormattedText>
                                    </Label>
                                </ViewCell>
                            </TableSection>
                        
                            <TableSection>
                            <ViewCell>
                                <Label Margin="2">
                                    <Label.FormattedText>
                                        <FormattedString>
                                            <Span
                                                Text="Description:"
                                                FontAttributes="Bold"
                                                TextColor="#009FE3"
                                                />
                                            
                                            <Span
                                                Text="  "
                                                />
                                            
                                            <Span
                                                Text="This item has dimensions X, Y and Z and is made of material ABC. "
                                                />
                                            </FormattedString>
                                        </Label.FormattedText>
                                    </Label>
                                </ViewCell>
                            </TableSection>
                        
                            <TableSection>
                                <ViewCell>
                                    <Label Margin="2">
                                        <Label.FormattedText>
                                            <FormattedString>
                                                <Span
                                                    Text="In Production:"
                                                    FontAttributes="Bold"
                                                    TextColor="#009FE3"
                                                    />
                                                
                                                <Span
                                                    Text="  "
                                                    />
                                                
                                                <Span
                                                    Text="YES / NO"
                                                    />
                                                </FormattedString>
                                            </Label.FormattedText>
                                        </Label>
                                    </ViewCell>
                                </TableSection>
                        
                        </TableRoot>
                    </TableView>
                        

                    <Grid Grid.Row="2" HorizontalOptions="Center" Padding="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                        
                        <Button HorizontalOptions="FillAndExpand" VerticalOptions="Center"
                            x:Name="componentsButton"
                            Text="Components"
                            Clicked="componentsButton_Clicked"
                            Grid.Column="0"
                            BackgroundColor="#BED733"
                            TextColor="White"
                            FontSize="Large"
                            FontAttributes="Bold"
                            />
                        
                        <Button HorizontalOptions="FillAndExpand" VerticalOptions="Center"
                            x:Name="commentsButton"
                            Text="Comments"
                            Clicked="commentsButton_Clicked"
                            Grid.Column="1"
                            BackgroundColor="#BED733"
                            TextColor="White"
                            FontSize="Large"
                            FontAttributes="Bold"
                            />
                    
                        <Button HorizontalOptions="FillAndExpand" VerticalOptions="Center"
                            x:Name="infoButton"
                            Text="+Info"
                            Clicked="infoButton_Clicked"
                            Grid.Column="2"
                            BackgroundColor="#BED733"
                            TextColor="White"
                            FontSize="Large"
                            FontAttributes="Bold"
                            />
                        </Grid>
            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
